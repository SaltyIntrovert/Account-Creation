param($email, $userIDscrb, $EmpID, $eA10, $NAMEfirstO, $NAMElastO, $Office, $3cx, $OU, $userIDo, $NAMEdisplay, $NAMEfirst, $NAMElast, $NAMEmiddle)
    $email = "%email%"
        $userIDscrb = [string]$email.Split('@')[0..($email.Split('@').count-2)]
    $EmpID = "%EmpID%"
        $eA10 = Get-ADUser -Filter {employeeID -eq $empID} -Properties * | Select-Object -ExpandProperty extensionAttribute10
        $Office = Get-ADUser -Filter {employeeID -eq $empID} -Properties * | Select-Object -ExpandProperty office
            $3cx = IF($Office -eq 'Admin'){'Update name attached to extension (3cx and Confluence - Admin Phone Extension)'}else{$null}
        $OU = Get-ADUser -Filter {employeeID -eq $empID} -Properties * | Select-Object -ExpandProperty distinguishedName
        $userIDo = Get-ADUser -Filter {employeeID -eq $empID} -Properties * | Select-Object -ExpandProperty SamAccountName
    $NAMEdisplay = "%NAMEfirst% %NAMElast%"
    $NAMEfirst = "%NAMEfirst%"
    $NAMElast = "%NAMElast%"
    $NAMEmiddle = "%NAMEmiddle%"
    $NAMEfull = IF($null -eq $NAMEmiddle){"$NAMEfirst $NAMElast"}else{"$NAMEfirst $NAMEmiddle $NAMElast"}

#UserID length test
$NAMEfirstScrb = $NAMEfirst -replace '[^\p{L}\p{Nd}/`//-/_/!]', ''
$NAMElastScrb = $NAMElast -replace '[^\p{L}\p{Nd}/`//-/_/!]', ''
$NAMEf = $NAMEfirstScrb[0]
    $userIDb =  "$NAMEf.$NAMElastScrb"
    $userIDc = "$NAMEf$NAMEmiddle.$NAMElastScrb"
    IF($userIDscrb.length -gt 20){
            $userIDtb = Get-ADUser -Filter {proxyAddresses -like "SMTP:$userIDb@*******.com"} | Select-Object -ExpandProperty Name
        IF($null -ne $userIDtb -and $userIDb.length -gt 20){
                $userIDtc = Get-ADUser -Filter {proxyAddresses -like "SMTP:$userIDc@*******.com"} | Select-Object -ExpandProperty Name
            IF($null -eq $userIDtc -and $userIDc.length -gt 20){
                $userID = $userIDc
                $HR = "HR provided UserID exceeded 20 characters, contact HR to have UserID and Email updated to $userID"}
        }else{
            $userID = $userIDb
            $HR = "HR provided UserID exceeded 20 characters, contact HR to have UserID and Email updated to $userID"}
    }else{
        $userID = $userIDscrb
        $HR = $null}

#Changing name
    Rename-ADObject -Identity $OU -NewName "$NAMEfull"
Get-ADUser -Filter {employeeID -eq $empID} | Set-ADUser -SamAccountName $userID -UserPrincipalName $email
    Set-ADUser -Identity $userID -EmailAddress $email
    Set-ADUser -Identity $userID -remove @{ProxyAddresses="SMTP:$userIDo@*******.com"}
    Set-ADUser -Identity $userID -add @{ProxyAddresses="SMTP:$email,smtp:$userIDo@*******.com" -split ","}
    Set-ADUser -Identity $userID -replace @{initials=$eA10;middleName=$NAMEmiddle}

#Creating txt files for Power Automate to read
$3cx | Out-File -FilePath C:\Apps\NC\AR3cx.txt
$eA10 | Out-File -FilePath C:\Apps\NC\eA10.txt
$HR | Out-File -FilePath C:\Apps\NC\HR.txt
$Office | Out-File -FilePath C:\Apps\NC\Office.txt
$userID | Out-File -FilePath C:\Apps\NC\userIDn.txt
$userIDo | Out-File -FilePath C:\Apps\NC\userIDo.txt
